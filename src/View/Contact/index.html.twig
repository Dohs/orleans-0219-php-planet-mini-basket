{% extends 'layout.html.twig' %}
{% block stylesheet %}
<link rel="stylesheet" href="/assets/css/contact.css">
{% endblock %}

{% block content %}
    <div class="section">
        <div class="container">

            <h1 class="brand text-center"><span>Contact</span></h1>

            <div class="wrapper">

                <div class="company-info">
                    <h3>Planète Mini Basket</h3>

                    <ul>
                        <li><i class="fa fa-road"></i> 9 rue Henri Lavedan</li>
                        <li><i class="fa fa-phone"></i> (33) 238968473</li>
                        <li><i class="fa fa-envelope"></i> contact@planete-mini-basket.fr</li>
                    </ul>
                </div>

                <div class="contact">
                    <h3>Contactez-Nous !</h3>

                    <form id="contact-form" action="Contact/index" method="post">

                        <p>
                            <label>Nom :</label>
                            <input placeholder="Entrez votre Nom" type="text" name="name" id="name" required>
                            <div class="text-danger">{{ errors.civility }}</div>
                        </p>

                        <p>
                            <label>Prénom :</label>
                            <input placeholder="Entrez votre Prénom" type="text" name="firstname" id="firstname">
                            <div class="text-danger">{{ errors.civility }}</div>
                        </p>

                        <p>
                            <label>E-mail :</label>
                            <input placeholder="contact@exemple.fr" type="email" name="email" id="email" required>
                            <div class="text-danger">{{ errors.email }}</div>
                        </p>

                        <p>
                            <label>Téléphone :</label>
                            <input placeholder="Votre numéro de téléphone" type="text" name="phone" id="phone">
                            <div class="text-danger">{{ errors.telephone }}</div>
                        </p>

                        <p class="full">
                            <label>Message :</label>
                            <textarea placeholder="Ecrivez-nous quelques lignes..." name="message" rows="5" id="message"></textarea>
                            <div class="text-danger">{{ errors.message }}</div>
                        </p>

                        <p class="full">
                            <button type="submit" name="submit">Envoyez</button>
                        </p>

                    </form>

                </div>


            </div>

        </div>
    </div>

{% endblock %}