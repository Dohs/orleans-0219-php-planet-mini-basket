{% extends 'layout.html.twig' %}

{% block stylesheet %}
<link href="/assets/css/admin.css" rel="stylesheet">
{% endblock %}

{% block title %}
    Admin FAQ
{% endblock %}

{% block content %}
    <div class="container  question">
        <div class="row justify-content-center">
            <h1>Administration des FAQs</h1>
        </div>
        <div class="row justify-content-center">
            <button>Ajouter</button>
        </div>
        <div class="row justify-content-center">
            <div class="col-10">
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th scope="col-1">ID</th>
                        <th scope="col-4">Question</th>
                        <th scope="col-5">Réponse</th>
                        <th scope="col-1">Editer</th>
                        <th scope="col-1">Supprimer</th>
                    </tr>
                    </thead>
                    <tbody>

                    {% for faq in faqs %}

                        <tr>
                            <th scope="row">{{ faq.id }}</th>
                            <td>{{ faq.question_name }}</td>
                            <td>{{ faq.answer_name }}</td>
                            <td>Editer</td>
                            <td><a class="btn trigger" href="javascript:;">Supprimer</a>
                                <div class="modal-wrapper">
                                    <div class="modal">
                                        <div class="head">
                                            <a class="btn-close trigger" href="javascript:;"></a>
                                            <p class="text-center title">Suppression</p>
                                        </div>
                                        <div class="content text-center">
                                            <p class="confirmation">Confirmer vous la suppresion de cet élèment ?</p>
                                            <a class="yes"><i class="fas fa-check"> OUI</i></a>
                                            <a class="no"><i class="fas fa-times"> NON</i></a>
                                        </div>
                                    </div>
                            </td>

                        </tr>

                    {% endfor %}

                    </tbody>
                </table>
            </div>
        </div>
    </div>

{% endblock %}


{% block javascript %}
<script src="/assets/js/indexAdmin.js" crossorigin="anonymous"></script>
{% endblock %}