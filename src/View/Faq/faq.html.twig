{% extends 'layout.html.twig' %}

{% block stylesheet %}{% endblock %}

{% block title %}
    FAQ
{% endblock %}

{% block content %}

    <div class="row">
        <div class="col">
            <div id="accordion">

                {% for faq in faqs %}

                    <div class="card">
                        <div class="card-header" id="heading{{ faq.id }}">
                            <h5 class="mb-0">
                                <button class="btn btn-link collapsed" data-toggle="collapse"
                                        data-target="#collapse{{ faq.id }}"
                                        aria-expanded="true"
                                        aria-controls="collapse{{ faq.id }}">
                                    {{ faq.question_name }}
                                </button>
                            </h5>
                        </div>

                        <div id="collapse{{ faq.id }}" class="collapse" aria-labelledby="heading{{ faq.id }}"
                             data-parent="#accordion">
                            <div class="card-body">
                                {{ faq.answer_name }}
                            </div>
                        </div>
                    </div>

                {% endfor %}

            </div>
        </div>
    </div>

{% endblock %}

{% block javascript %}<script type="text/javascript" src="/assets/javascript/faq.js" crossorigin="anonymous"></script>{% endblock %}