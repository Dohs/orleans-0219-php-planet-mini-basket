        <div class="row">
            <div class="col-md-12">
                <div class="carousel slide" data-ride="carousel" id="quote-carousel">
                    <ol class="carousel-indicators">
                        {% for newsContent in news %}
                        <li class="carousel-news" data-target="#quote-carousel" data-slide-to="{{ loop.index0 }}"{{ loop.first ? ' classe="active"' }}></li>
                        {% endfor %}
                    </ol>
                    <div class="carousel-inner">
                        {% for newsContent in news %}
                        <div class="carousel-item {{ loop.first ? 'active' }}">
                                    <h3 class="text-center mt-2">{{ newsContent.news_title }}</h3>
                                    <p class="text-center">{{ newsContent.news_content }}</p>
                        </div>
                        {% endfor %}
                    </div>
                    <a class="carousel-control-prev" href="#quote-carousel" role="button" data-slide="prev">
